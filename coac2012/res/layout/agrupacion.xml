<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cartel"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/agrNombre"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Nombre Agrupación"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#6b6b6b"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/agrFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="IC_FAV"
                android:src="@drawable/ic_fav" />
        </LinearLayout>

        <ImageView
            android:id="@+id/agrImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dip"
            android:contentDescription="IMAGEN_AGRUPACION"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnFicha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_archive" />

            <ImageView
                android:id="@+id/btnVideos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_play_clip" />

            <ImageView
                android:id="@+id/btnComent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_start_conversation" />

            <ImageView
                android:id="@+id/btnFav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_favorite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="Modalidad: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agrModalidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Comparsa"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="Autor: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agrAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Juán Velazquez"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="Director: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agrDirector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Juán Velazquez"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="Localidad: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agrLocalidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Cádiz"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="COAC2011: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agrCOAC2011"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Guantalamera"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="left"
                android:text="Componentes: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/agrComponentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="15dip"
                android:gravity="left"
                android:text="Pepe Rodríguez (Bombo)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6b6b6b" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>