<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <stroke
                android:width="1dp"
                android:color="#000000" />

            <gradient
                android:angle="270"
                android:centerColor="#ffE0E0E0"
                android:centerY="0.75"
                android:endColor="#FFBFBFBF"
                android:startColor="#FFBFBFBF" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <stroke
                    android:width="1dp"
                    android:color="#000000" />

                <gradient
                    android:angle="270"
                    android:centerColor="#80E0E0E0"
                    android:centerY="0.75"
                    android:endColor="#0022bb"
                    android:startColor="#0022bb" />
            </shape>
        </clip>
    </item>

</layer-list>