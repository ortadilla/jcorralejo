<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView1" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" 
	android:fillViewport="true" >

	<LinearLayout
		android:id="@+id/linearLayout1"
	    android:background="@drawable/fondo_general"
		android:orientation="vertical" 
		android:layout_width="match_parent" 
		android:layout_height="match_parent" >
	
	<LinearLayout 
		android:layout_weight="7"
		android:id="@+id/nombreYDescripcion"
		android:layout_width="match_parent" 
		android:layout_height="0dip"
		android:layout_gravity="center_horizontal" 
		android:gravity="center"
		android:layout_marginBottom="15dip"
		android:orientation="vertical">
		<EditText android:id="@+id/lugarNombre"
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:gravity="center_horizontal"
			android:layout_marginTop="10dip" 
			android:text="-"
			android:textColor="#0101DF"
			android:layout_weight="2"
			android:textAppearance="?android:attr/textAppearanceLarge" />
		<TextView android:layout_width="fill_parent" 
			android:layout_height="0dip" 
			android:textColor="#0101DF" 
			android:textAppearance="?android:attr/textAppearanceSmall" 
			android:id="@+id/lugarDireccion" 
			android:gravity="center_horizontal" 
			android:layout_marginTop="10dip" 
			android:layout_weight="1"
			android:text="-" />
		<ImageView 	android:id="@+id/lugarImagen"
			android:gravity="center_horizontal"
			android:layout_marginTop="10dip"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_weight="2"/>
		<EditText android:id="@+id/lugarDescripcion"
			android:layout_width="fill_parent" 
			android:layout_height="0dip"
			android:layout_marginTop="10dip"
			android:text="-"
			android:layout_weight="3"
			android:gravity="center_horizontal"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#0101DF" />
	</LinearLayout>

	<LinearLayout 
		android:layout_weight="1"
		android:layout_width="fill_parent" 
		android:layout_height="0dip"
		android:layout_gravity="center_horizontal" 
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<Button android:text="@string/editar"
			android:id="@+id/botonEditar" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_weight="1" />
		<Button android:text="@string/eliminar" 
			android:id="@+id/botonEliminar" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_weight="1"/>
	</LinearLayout>
</LinearLayout>
</ScrollView>