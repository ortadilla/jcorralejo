<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout
		android:id="@+id/linearLayout1"
	    android:background="@drawable/fondo_general"
		xmlns:android="http://schemas.android.com/apk/res/android" 
		android:orientation="vertical" 
		android:layout_width="match_parent" 
		android:layout_height="match_parent" 
		android:layout_gravity="top">
		<TextView android:id="@+id/lugarNombre"
			android:layout_width="fill_parent"
			android:gravity="center_horizontal"
			android:layout_marginTop="10dip" 
			android:text="-"
			android:textColor="#0101DF"
			android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="1" android:layout_height="0dp"/>
		<TextView android:id="@+id/lugarDireccion"
			android:layout_width="fill_parent"
			android:gravity="center_horizontal"
			android:text="-"
			android:textColor="#0101DF"
			android:textAppearance="?android:attr/textAppearanceSmall" android:layout_weight="1" android:layout_height="0dp" android:layout_marginTop="2dip"/>
		<ImageView 	android:id="@+id/lugarImagen"
			android:gravity="center_horizontal"
			android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="2dip" android:layout_weight="1"/>
		<ScrollView android:id="@+id/scrollView1" 
 			android:layout_width="match_parent" android:layout_height="0dp" android:layout_gravity="top" android:layout_marginTop="10dip" android:layout_weight="6">
			<TextView android:id="@+id/lugarDescripcion"
				android:layout_width="fill_parent" 
				android:text="-"
				android:gravity="center_horizontal"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#0101DF" android:layout_height="wrap_content"/>
		</ScrollView>
		<Button android:text="@string/editar" android:layout_width="fill_parent" android:id="@+id/botonEditar" android:layout_gravity="bottom" android:layout_height="0dp" android:layout_marginTop="10dip" android:layout_weight="1"></Button>

</LinearLayout>
