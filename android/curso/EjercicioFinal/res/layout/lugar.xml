<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView1" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:fillViewport="true">
<LinearLayout
	android:id="@+id/linearLayout1"
    android:background="@drawable/fondo_general"
	android:orientation="vertical" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" >	
	<LinearLayout
		android:id="@+id/linearLayout1"
		android:orientation="vertical" 
		android:layout_width="match_parent" 
		android:layout_height="0dip" android:layout_weight="10">
		<TextView android:id="@+id/lugarNombre"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginTop="10dip" 
			android:text="-"
			android:textColor="#0101DF"
			android:textAppearance="?android:attr/textAppearanceLarge" 
			/>
		<TextView android:id="@+id/lugarDireccion"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:gravity="center_horizontal"
			android:text="-"
			android:textColor="#0101DF"
			android:textAppearance="?android:attr/textAppearanceSmall" 
			android:layout_marginTop="1dip"/>
		<ImageView 	android:id="@+id/lugarImagen"
			android:gravity="center_horizontal"
			android:layout_gravity="center_horizontal" 
			android:layout_height="0dip"
			android:layout_weight="3" 
			android:layout_width="wrap_content" 
			android:layout_margin="3dip"/>
		<TextView android:id="@+id/lugarDescripcion"
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:layout_weight="3" 
			android:text="-"
			android:gravity="center_horizontal"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#0101DF" 
			android:layout_gravity="center_vertical" 
			android:layout_marginTop="10dip"/>
	</LinearLayout>

	<LinearLayout 
		android:layout_height="0dip"
		android:layout_width="fill_parent"
		android:layout_weight="1" 
		android:gravity="center_horizontal"
		android:orientation="horizontal">
		<Button android:text="@string/editar" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:id="@+id/botonEditar"
			android:layout_marginTop="5dip"		 />
	</LinearLayout>
		
</LinearLayout>
</ScrollView>
